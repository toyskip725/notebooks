---
import SideNavigation from '../components/SideNavigation';
import '../styles/global.css';

const { frontmatter } = Astro.props;
const dirpath = Astro.url.pathname.split('/')[1];
const allPosts = await Astro.glob('../pages/**/*.mdx')
const posts = allPosts.filter((post) => post.url?.includes(dirpath));
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="generator" content={Astro.generator} />
    <meta id="section" content={frontmatter.section} />
    <link 
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" 
      integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
      crossorigin="anonymous"
    />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <div class="note">
      <aside class="sidebar">
        <SideNavigation dirpath={dirpath} posts={posts}/>
      </aside>
      <div class="markdown-content">
        <slot />
      </div>
    </div>
  </body>
</html>

<style>
.note {
  display: flex;
}

.sidebar {
  width: 20%;
  padding: 10px;
  position: sticky;
  align-self: flex-start;
  top: 0;
}

.markdown-content {
  width: 60%;
  padding: 10px;
}
</style>

<script>
  const section = document.getElementById('section');
  const elements = document.getElementsByClassName('math-numbering');
  Array.prototype.forEach.call(elements, (element, index) => 
    element.innerText = `${element.innerText} ${section?.attributes[1].value}.${index + 1}`
  );
</script>
